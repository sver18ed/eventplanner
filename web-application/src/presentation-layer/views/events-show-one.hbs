<div class="columns is-centered" style="margin-top: 5%;">
	<div class="column">
	{{#if errors.length}}
		<p>Oh no, something went wrong:</p>
		<ul>
			{{#each errors}}
				<li>{{this}}</li>
			{{/each}}
		</ul>
	{{else}}
		
		{{#if event}}
			<div class="columns is-centered">
				<h1 class="title is-1" style="font-style: italic;">{{event.title}}</h1>
			</div>
			<div class="columns is-centered">
				<p>
					<small>Created by: {{event.host}} - </small><small><a href="/events/{{event.date}}">{{event.date}}</a></small>
				</p>
			</div>
			<div class="field">
				<form action="/events/join/{{event.date}}/{{event.id}}" method="POST">
					<input class="button is-small is-confirm" type="submit" value="Join Event">
				</form>
			</div>
			<div class="field">
				<form action="/events/delete/{{event.date}}/{{event.id}}" method="POST">
					<input class="button is-small is-danger" type="submit" value="Delete Event">
				</form>
			</div>
			{{#if attendants.length}}
				<ul>
				{{#each attendants}}
					<li>{{attendant}}</li>
				{{/each}}
				</ul>
			{{/if}}
				<div class="box">
					<div class="field">
						<figure class="image">
							<img src="https://bulma.io/images/placeholders/640x360.png" alt="Image">
						</figure>
					</div>
						<div class="field">
							<p>
								{{event.description}}
							</p>
					</div>
				</div>
						
		{{else}}
			<p>No, that event doesn't exist.</p>
		{{/if}}
		
	{{/if}}
	</div>
</div>