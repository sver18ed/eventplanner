<div class="content">
    <h2>Create Event</h2>
    <p>Create a new event using the form below.</p>
</div>

<form action="" method="POST">

    <div class="form-group">
        <div>
            <label>Title:</label>
        </div>
        <div>
            <input class="input" name="title" value="{{title}}" type="text" id="input-title" placeholder="Title">
        </div>
    </div>

    <div>
        <div>
            <label>Description:</label>
        </div>
        <div>
            <input class="input" name="description" value="{{description}}" type="text" id="input-description" placeholder="Description">
        </div>
    </div>

    <div>
        <div>
            <label>Date:</label>
        </div>
        <div>
            <input class="input" name="date" value="{{date}}" type="text" id="input-date">
        </div>
    </div>

    <input class="button is-primary" type="submit" value="Create Event">
    
</form>