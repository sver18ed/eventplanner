<div class="columns is-centered" style="margin-top: 10%;">
	<div class="column">
	{{#if errors.length}}
		<p>Oh no, something went wrong:</p>
		<ul>
			{{#each errors}}
				<li>{{this}}</li>
			{{/each}}
		</ul>
	{{else}}
		
		{{#if events.length}}
			<ul>
				{{#each events}}
					<div class="box">
						<article class="media">
							<div class="media-left">
							<figure class="image is-64x64">
								<img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
							</figure>
							</div>
							<div class="media-content">
							<div class="content">
								<p>
								<strong><a href="/events/{{date}}/{{id}}">{{title}}</a></strong> <small>{{accountUsername}}</small> <small><a href="/events/{{date}}">{{date}}</a></small>
								<br>
									{{description}}
								</p>
							</div>
							<nav class="level is-mobile">
								<div class="level-left">
								<a class="level-item" aria-label="reply">
									<span class="icon is-small">
									<i class="fas fa-reply" aria-hidden="true"></i>
									</span>
								</a>
								</div>
							</nav>
							</div>
						</article>
					</div>
				{{/each}}
			</ul>
		{{else}}
		<div class="columns is-centered">
			<h1 class="is-size-1">No events exist yet :(</h1>
		</div>
		{{/if}}
	{{/if}}
	{{#if isLoggedIn}}
		<div class="columns is-centered" style="margin-top: 20%;">
			<a class="button is-large is-primary" href="/events/create">Create Event</a>
		</div>
	{{/if}}
	</div>
</div>